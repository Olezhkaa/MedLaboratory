<Application x:Class="MedLaboratory.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MedLaboratory"
             StartupUri="/Presentation/Windows/LoginWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AdditionalBackground">#FF76E383</SolidColorBrush>
        <SolidColorBrush x:Key="FocusingAttention">#FF498C51</SolidColorBrush>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>

        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
    </Application.Resources>
</Application>
